<Window x:Class="WpfStopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Секундомер" Height="192.857" Width="437.714" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
  <Grid>
    <Button
      Content="Start"
      HorizontalAlignment="Left"
      Margin="33,31,0,0"
      VerticalAlignment="Top"
      Width="75"
      Click="Start_Click"
      FontFamily="Verdana"
    />
    <Button
      Content="Stop"
      HorizontalAlignment="Left"
      Margin="178,31,0,0"
      VerticalAlignment="Top"
      Width="75"
      Click="Stop_Click"
      FontFamily="Verdana"
    />
    <Button
      Content="Reset"
      HorizontalAlignment="Left"
      Margin="310,31,0,0"
      VerticalAlignment="Top"
      Width="75"
      Click="Reset_Click"
      FontFamily="Verdana"
    />
    <TextBlock
      Margin="10,86,10,0"
      TextWrapping="Wrap"
      Text="{Binding Clocktxt}"
      VerticalAlignment="Top"
      TextAlignment="Center"
      Width="412"
      FontFamily="Verdana"
    />
  </Grid>
</Window>
